                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </Label>
                  <Button fx:id="switchWatchlistBtn" mnemonicParsing="false" prefHeight="38.0" prefWidth="228.0" text="Switch to Watchlist">
